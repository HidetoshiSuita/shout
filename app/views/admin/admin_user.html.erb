<h1>ユーザマスタ</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>メールアドレス</th>
      <th>利用可否</th>
    </tr>
  </thead>

  <tbody>
    <% @user.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to "#{user.user_available}", "/admin/admin_update_user?id=#{user.id}" %></td>        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

