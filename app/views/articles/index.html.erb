<p id="notice"><%= notice %></p>

<h1>話題マスタ</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Tag</th>
      <th>Comment</th>
      <th>Img</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <%if !article.tag.nil? %>
        	<td><%= article.tag.html_safe %></td>
        <% end %>
        <td><%= article.comment %></td>
        <td><%= article.img %></td>
        <td><%= article.genre_id %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

