	  <%= f.file_field  :img %>
	  <br><br>
	  <%= f.hidden_field :user_id, :value => current_user.id %>
	  <%= f.hidden_field :genre_id, :value => @genre_id %>
	  <%=f.submit "新規作成"%>
	<%end%>
