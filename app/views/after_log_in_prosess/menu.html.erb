</div>

<br>
<!--contents-->
<% if !@article.nil? %>
	<h1>話題一覧</h1>
	<%@article.each do |art|%>
		<div style="padding: 10px; margin-bottom: 10px; border: 1px solid #333333; border-radius: 10px;">
		  	<h2><%= art[:title] %></h2>
		  	<%= art[:tag] %><br><br>
		  	<%if !art[:img].nil? %>
		  		<%= art[:img] %><br>
		  	<%end%>
			<%= art[:comment] %><br><br>
			<table>
			<% if current_user.id == art[:user_id] %>
			<p><%= link_to "この話題の編集"%></p>
			<% end %>
			<br><br>
			<div class="content">
				<%=form_for @shout, :url => {:controller => 'after_log_in_prosess', :action => 'shout'} do |f| %>
					<div class="field">
					  <%= f.text_area :shout %><br>
					</div>
					<div class="field">
						<table>
							<% icon_list.each_with_index do |icon, index| %>
							  <td><%= f.radio_button :emotion_no, index+1, :id => "#{index+1}" %>
							  <%= f.label :emotion_no, image_tag(icon), :for => "#{index+1}" %></td>
							<% end %>
						</table>
					</div>
					<%= f.hidden_field :article_id, :value => art[:id] %>
					<%= f.hidden_field :user_id, :value => current_user.id %>
					<%=f.submit "叫ぶ" %>
				<% end %>
				<p class="shout_button">この話題について叫ぶ</p>
			</div>
			<div class="content">
				<p>TEST2</p>
				<p class="view_article_button">この話題について叫びをみる</p>
			</div>
			</table>
		</div>
	<%end%>
<%end%>
